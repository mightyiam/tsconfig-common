{
  "name": "tsconfigs",
  "version": "4.0.0",
  "description": "Reusable TypeScript configuration files to extend from.",
  "scripts": {
    "release": "standard-version",
    "readme-toc": "doctoc readme.md",
    "lint-js": "eslint --ext .js,.ts .",
    "lint-md": "markdownlint --ignore node_modules **/*.md",
    "transpile": "tsc",
    "unit": "ava",
    "test": "run-s lint-js lint-md transpile unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mightyiam/tsconfigs.git"
  },
  "keywords": [
    "tsconfig",
    "common",
    "extend",
    "extends"
  ],
  "author": "Shahar Or <mightyiampresence@gmail.com> (https://mightyi.am/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mightyiam/tsconfigs/issues"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test"
    }
  },
  "homepage": "https://github.com/mightyiam/tsconfigs#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/travis-cli": "^8.2.0",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "ava": "^2.4.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.5.0",
    "eslint-config-standard-with-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.7",
    "markdownlint-cli": "^0.18.0",
    "npm-run-all": "^4.1.5",
    "read-pkg-up": "^7.0.0",
    "standard-version": "^7.0.0",
    "tempy": "^0.3.0",
    "tslib": "^1.10.0",
    "typescript": "3.6.2"
  },
  "files": [
    "browser-executable.json",
    "browser-module.json",
    "webworker-module.json",
    "nodejs-executable.json",
    "nodejs-module.json",
    "agnostic-module.json"
  ]
}
