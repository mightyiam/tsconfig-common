{
  "name": "tsconfigs",
  "version": "3.0.0",
  "description": "Reusable TypeScript configuration files to extend from.",
  "scripts": {
    "lint-js": "eslint --ext .js,.ts .",
    "lint-md": "markdownlint --ignore node_modules **/*.md",
    "compile": "tsc",
    "unit": "ava",
    "test": "run-s lint-js lint-md compile unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mightyiam/tsconfigs.git"
  },
  "keywords": [
    "tsconfig",
    "common",
    "extend",
    "extends"
  ],
  "author": "Shahar Or <mightyiampresence@gmail.com> (https://mightyi.am/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mightyiam/tsconfigs/issues"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test"
    }
  },
  "homepage": "https://github.com/mightyiam/tsconfigs#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/travis-cli": "^8.1.0",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "ava": "^2.3.0",
    "eslint": "^6.2.0",
    "eslint-config-standard-with-typescript": "^8.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.4",
    "markdownlint-cli": "^0.18.0",
    "npm-run-all": "^4.1.5",
    "tslib": "^1.10.0",
    "typescript": "3.5.3"
  },
  "files": [
    "browser.json",
    "common.json",
    "node.json",
    "universal.json"
  ]
}
